include ../rendercontext.def

.PHONY: all debug clean install

all: debug
debug: $(DEBUGBIN)

clean:
	$(RM) $(OBJ) $(DEBUGBIN)

install:
	@echo No install for debug.

$(DEBUGBIN): $(OBJ)
	$(AR) $(DEBUGBIN) $(OBJ)
	$(RANLIB) $(DEBUGBIN)

$(OBJPATH)/baseclass.o: $(RENDERCONTEXT_BASECLASS_CPP)
	$(CPP) -c $(RELPATH)/rendercontext/baseclass.cpp -o $@ $(CXXDEBUGLIBFLAGS)
$(OBJPATH)/declarationmap.o: $(RENDERCONTEXT_DECLARATIONMAP_CPP)
	$(CPP) -c $(RELPATH)/rendercontext/declarationmap.cpp -o $@ $(CXXDEBUGLIBFLAGS)
